    Layout = RoutePath.ContentAdmin();
    VBeneficeReel beneficeReel = ViewBag.beneficeReel;
    List<VBeneficeReelParAnneeMois> beneficeReelParmoisAns = ViewBag.beneficeReelParmoisAns;
    VBeneficeReelParAnnee Brans = ViewBag.beneficeReelParAnnee;
}


