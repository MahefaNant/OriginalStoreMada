@using originalstoremada.C_
@model originalstoremada.Models.Users.Admin

@{
    Layout = RoutePath.HtmlTemplateAdmin();
}

<div class="wrapper vh-100">
    <div class="row align-items-center h-100">
        <form asp-controller="Admin" asp-action="Login" method="POST" class="col-lg-3 col-md-4 col-10 mx-auto text-center needs-validation" novalidate>
            <a class="navbar-brand mx-auto mt-2 flex-fill text-center">
                <img src="~/images/OSM/osm-mini.png" class="navbar-brand-img rounded-circle brand-md"/>
            </a>
            <h1 class="h6 mb-3">Se Connecter</h1>
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input value="admin@gmail.com" name="mail" type="email" id="inputEmail" class="form-control form-control-lg" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input value="admin" name="code" type="password" id="inputPassword" class="form-control form-control-lg" placeholder="Mot de passe" required>
            </div>
            <div class="checkbox mb-3">
                <label><input name="remember" type="checkbox" value="true" checked> Rester Connecter </label>
            </div>
            <button class="btn btn-lg but2-mod2 but-block" type="submit"><span>Se Connecter</span></button>
            
            <p class="mt-5 mb-3 text-muted"><a asp-action="SignUp">S'inscrire en tant qu'employer</a></p>
            <p class="mt-5 mb-3 text-muted">Â© OSM</p>
            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Invalide! @ViewBag.error</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
        </form>
    </div>
</div>

