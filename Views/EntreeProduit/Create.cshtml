@using originalstoremada.Models.Users
@using originalstoremada.Models.Produits
@using originalstoremada.Models.Produits.views
@using originalstoremada.Services.Users
@model originalstoremada.Models.Produits.EntreeProduit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/templates/_Content.cshtml";
    Admin admin = ViewBag.admin;
    VImagePrincipalPrixProduit produit = ViewBag.vproduit;
    PreferenceProduit preference = ViewBag.preference!=null ? ViewBag.preference: null;
}

<h1>Create</h1>

<h4>EntreeProduit</h4>

<section class="section">
    <div class="card top-selling">
        <div class="card-body pb-0">
            <h5 class="card-title">Produits <span>| Original Store Mada</span></h5>
            
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/images/produits/@(produit.Image!=null ? produit.Image: "locks/vide.jpg")" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <form asp-action="Create">
                            <h5 class="card-title">@produit.Nom ( categorie: @produit.CategorieProduit.Nom)</h5>
                            <p class="card-text">@produit.Description .</p>
                           
                                @if (AdminService.IsLevel_5(admin))
                                {
                                    <p class="card-text">
                                        <div class="input-group">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">Boutique</span>
                                            <select asp-for="IdBoutique" asp-items="@ViewBag.boutiques" class="form-select"></select>
                                        </div>
                                    </p>
                                }
                                
                                <p class="card-text">
                                    <div class="input-group">
                                        <span class="input-group-text" id="inputGroup-sizing-sm">Couleur</span>
                                        <input  name="couleur" type="text" class="form-control " value="@(preference!=null ? preference.ContenueProduit.Couleur : "?")" @(preference!=null ? "readonly" : "")>
                                    </div>
                                </p>
                                
                                <p class="card-text">
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Taille</span>
                                    <input name="taille" type="text" class="form-control" value="@(preference!=null ? preference.Taille : "?")" @(preference!=null ? "readonly" : "")>
                                </div>
                            </p>
                            
                           
                            <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                            <input type="hidden" asp-for="IdProduit" value="@produit.Id"/>
                                @if(preference!=null) { <input type="hidden" asp-for="IdPreferenceProduit" value="@preference.Id"/> }
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Date</span>
                                    <input asp-for="Date" class="form-control" placeholder="1">
                                </div> <br/>
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Quantiter</span>
                                    <input asp-for="Quantiter" type="number" class="form-control" value="1">
                                    <button class="btn btn-outline-secondary" type="submit">Ajouter<i class="bx bx-plus"></i></button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
    </div>
</section>




