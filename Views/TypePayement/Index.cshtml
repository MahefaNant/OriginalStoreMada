@using originalstoremada.C_
@model List<originalstoremada.Models.Payements.TypePayement>

@{
    Layout = RoutePath.ContentAdmin();
}

<!-- Page Title -->
<div class="pagetitle">
  <h1>Notre type de payement</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item active"><a>Type de Payement</a></li>
    </ol>
  </nav>
</div>
<!-- End Page Title -->

<button type="button" class="btn but2-mod1 btn-sm mb-3"  data-bs-toggle="modal" data-bs-target="#update">
    <i class="fe fe-plus-circle fe-24"></i>
    <span>Nouvelle Type</span>
</button>


<div class="row">
    <div class="col-md-12">
        <div class="tab2-wrap">
            <table class="tab2">
                <thead>
                <tr>
                    <th class="pal6_bg2 text-white">Nom du Type</th>
                    <th class="pal6_bg2 text-white">Numero responsable</th>
                    <th class="pal6_bg2 text-white">Nom du compte</th>
                    <th class="pal6_bg2 text-white">Nom du responsable</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr class="alert" role="alert">
                        <td>
                            <div class="pl-3 email">
                                <span>@item.Nom</span>
                                <span>
                                    <button type="button" class="btn but2-mod3 btn-sm" data-bs-toggle="modal" data-bs-target="#cat_@item.Id">
                                        <i class="fe fe-edit"></i><span>Changer</span>
                                    </button>
                                </span>
                            </div>
                        </td>
                        <td>@item.NumeroResp</td>
                        <td>@item.NomNum</td>
                        <td>@item.NomResp</td>
                    </tr>
                    
                    <div class="modal fade" id="cat_@item.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="varyModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="varyModalLabel">Modifier <strong>@item.Nom</strong></h5>
                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form asp-action="Edit" class="needs-validation" novalidate>
                                    <div class="modal-body">
                                        <input type="hidden" name="Id" value="@item.Id"/>
                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label">Nom du Type</label>
                                            <input name="Nom" value="@item.Nom" type="text" class="form-control" id="recipient-name" placeholder="Nom du catégorie" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label"> Numero responsable</label>
                                            <input name="NumeroResp" value="@item.NumeroResp" type="text" step="0.01" class="form-control" id="recipient-name" placeholder="Numero responsable" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label">Nom du compte</label>
                                            <input name="NomNum" value="@item.NomNum" type="text" class="form-control" id="recipient-name" placeholder="Nom du compte" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label">Nom du responsable</label>
                                            <input name="NomResp" value="@item.NomResp" type="text" class="form-control" id="recipient-name" placeholder="Nom du responsable" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn mb-2 but2-mod3 btn-sm" data-bs-dismiss="modal"><i class="fa fa-close"></i>Annuler</button>
                                        <button type="submit" class="btn mb-2 but2-mod1 btn-sm"><i class="fe fe-check"></i> <span>Valider</span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                <tr>
                    <th colspan="4"></th>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

 @*---------MODAL UPDATE-----------------*@

<div class="modal fade" id="update" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="varyModalLabel">Ajout de nouveau <strong>vol</strong></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Nom du Type</label>
                        <input name="Nom" type="text" class="form-control" id="recipient-name" placeholder="Nom du catégorie" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Numero responsable</label>
                        <input name="NumeroResp" type="text" step="0.01" class="form-control" id="recipient-name" placeholder="Numero responsable" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Nom du compte</label>
                        <input name="NomNum" type="text" class="form-control" id="recipient-name" placeholder="Nom du compte" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Nom du responsable</label>
                        <input name="NomResp" type="text" class="form-control" id="recipient-name" placeholder="Nom du responsable" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn mb-2 but2-mod3 btn-sm" data-bs-dismiss="modal"><i class="fa fa-close"></i>Annuler</button>
                    <button type="submit" class="btn mb-2 but2-mod1 btn-sm"><i class="fe fe-check"></i> <span>Valider</span></button>
                </div>
            </form>
        </div>
    </div>
</div>


